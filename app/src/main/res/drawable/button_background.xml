<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- button_background.xml -->
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">
        <solid android:color="#FFFFFF" /> <!-- White circle background -->
        <padding
            android:bottom="8dp"
            android:left="8dp"
            android:right="8dp"
            android:top="8dp" />
        <size
            android:width="48dp"
            android:height="48dp" />
        <item>
            <rotate
                android:fromDegrees="45"
                android:toDegrees="45"
                android:pivotX="24%"
                android:pivotY="24%">
                <shape android:shape="rectangle">
                    <solid android:color="#000000" /> <!-- Black arrow -->
                    <size
                        android:width="12dp"
                        android:height="2dp" />
                </shape>
            </rotate>
        </item>
    </shape>

</selector>