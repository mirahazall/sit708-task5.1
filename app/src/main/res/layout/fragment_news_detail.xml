<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragmentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="13dp"
        android:text="NEWS DETAILS" />

    <ImageView
        android:id="@+id/newsDetailImageView"
        android:layout_below="@id/fragmentTitle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/newsphoto" />

    <TextView
        android:id="@+id/newsDetailTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/newsDetailImageView"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/newsDetailDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/newsDetailImageView"
        android:gravity="center"
        android:padding="8dp" />

    <TextView
        android:id="@+id/newsDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsDetailDescriptionTextView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:padding="8dp" />

    <Button
        android:id="@+id/closeButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/newsDetailsTextView"
        android:layout_centerHorizontal="true"
        android:padding="6dp"
        android:text="Back"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/relatedNewsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/closeButton"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="26sp"
        android:text="RELATED STORIES" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/relatedNewsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relatedNewsTitle"
        android:padding="12dp"
        android:scrollbars="vertical" />
</RelativeLayout>
